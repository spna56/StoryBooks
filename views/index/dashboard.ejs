<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoryBooks</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <script src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>

    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <nav class="grey darken-3">
        <div class="container">
            <div class="wrapper">
                <a href="/" class="brand-logo center">StoryBooks</a>
                <a href="#" class="button-collapse show-on large" data-activates="main-menu"><i
                        class="fa fa-bars"></i></a>
                <!--Right nav-->
                <ul class="right hide-on-small-only">
                    <% if(user) { %>
                    <li><a href="/dashboard">Welcome <%=user.firstName%></a></li>
                    <li><a href="/auth/logout" height="5px"><i class="fa fa-sign-out" height="65px"></i> Logout</a></li>
                    <% }else { %>
                    <li><a href="/stories" height="5px"><i class="fa fa-book" height="65px"></i> Public Stories</a></li>
                    <% } %>
                </ul>
                <!--Side Menu-->
                <ul class="sidenav" id="main-menu">
                    <% if(user){ %>

                    <% } else{ %>
                    <li><a class="btn red 1" href="auth/google"><i class="fa fa-google left"></i>Login With Google</a>
                    </li>

                    <% }  %>

                    <li><a href="/stories"><i class="fa fa-book"></i> Public Stories</a></li>
                    <li class="divider"></li>
                    <% if(user){%>
                    <li><a href="/dashboard"><i class="fa fa-cog"></i> Dashboard</a></li>
                    <li><a href="/stories/my"><i class="fa fa-user"></i> My Stories</a></li>
                    <li><a href="/auth/logout"><i class="fa fa-sign-out"></i>Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <% if(user){%>
    <div class="fixed-action-btn">
        <a href="/stories/add" class="btn-floating btn-large red "><i class="fa fa-plus"></i></a>
    </div>
    <% } %>
    <main>
        <div class="container">

            <h4>Welcome <%=user.firstName %></h4>

            <h4>Your Stories</h4>
            <% if(user){ %>
            <table class="striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <%  stories.forEach(function(stories){ %>
                    <tr>
                        <td><a href="/stories/show/<%=stories.id%>"><%=stories.title %></a></td>
                        <td><%= moment(stories.date).format('MMMM do YYYY')%></td>
                        <td><span class="dash-status"><%=stories.status%></span></td>
                        <td>
                            <a  class="btn left-align" href="stories/edit/<%=stories.id %>"><i class="fa fa-pencil"></i>Edit</a>
                            <form action="/stories/<%=stories.id%>?_method=DELETE " method="POST" id="delete-form">
                                <button type="submit" class="btn red"><i class="fa fa-remove"></i>Delete</button>
                            </form>
                        
                        </td>

                    </tr>

                    <% }) %>
                </tbody>
            </table>

            <% } else{ %>
            <p>You have not created any stories yet</p>
            <% } %>
        </div>
    </main>
    <footer class="page-footer grey darken-3">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">StoryBooks</h5>
                    <p class="grey-text text-lighten-4">Share your life with the world</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="/stories">Public Stories</a></li>
                        <li><a class="grey-text text-lighten-3" href="/about">About</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Â© 2020 StoryBooks
                <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/js/materialize.min.js"></script>

    <script>
        $(document).ready(() => {
            $('.button-collapse').sideNav()
        })

    </script>

</body>

</html>